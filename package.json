{
  "name": "checking-extension",
  "displayName": "checking-extension",
  "description": "A vscode extension to open tn_check and twl_check files for checking verses",
  "version": "0.0.6-beta.3",
  "publisher": "unfoldingWord",
  "engines": {
    "vscode": "^1.91.0"
  },
  "categories": [
    "Other"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/unfoldingWord-box3/checking-extension"
  },
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "checking-extension.initTranslationChecker",
        "title": "Translation Checking Tool: Initialize Project"
      },
      {
        "title": "Translation Checking Tool: Initialize Checking Workflow",
        "command": "checking-extension.launchWorkflow",
        "category": "Checking Tool Project Management"
      },
      {
        "title": "Translation Checking Tool: Create New Folder",
        "command": "checking-extension.createNewFolder",
        "category": "Checking Tool Project Management"
      },
      {
        "title": "Translation Checking Tool: Select Folder",
        "command": "checking-extension.selectFolder",
        "category": "Checking Tool Project Management"
      },
      {
        "title": "Translation Checking Tool: Select Gateway Language",
        "command": "checking-extension.selectGL",
        "category": "Checking Tool Project Management"
      }
    ],
    "customEditors": [
      {
        "viewType": "checking-extension.translationChecker",
        "displayName": "Translation Checking Tool: Make Selections for Translation Words and Notes",
        "selector": [
          {
            "filenamePattern": "*.twl_check"
          },
          {
            "filenamePattern": "*.tn_check"
          }
        ],
        "priority": "default"
      }
    ],
    "viewsWelcome": [
      {
        "view": "workbench.explorer.emptyView",
        "contents": "==================\nTo Create a new checking project, click on the 'Create Checking Project' button below:\n[Create Checking Project](command:checking-extension.initTranslationChecker)"
      }
    ],
    "walkthroughs": [
      {
        "id": "initChecking",
        "title": "Initialize Checking",
        "description": "A checking workflow",
        "steps": [
          {
            "id": "openFolder",
            "title": "Open Project Folder",
            "description": "First, let's open a folder where your new Codex project will be initialized.\n[Open Project Folder](command:checking-extension.selectFolder)\n[Create New Project Folder](checking-extension.createNewFolder)",
            "media": {
              "image": "./src/media/folder-active.png",
              "altText": "Open Project Folder"
            },
            "completionEvents": [
              "onFolderSelected"
            ],
            "when": "workbenchState == empty"
          },
          {
            "id": "selectNewFolder",
            "title": "Select New Project Folder",
            "description": "First, let's open a folder where your new Codex project will be initialized.\n[Open Project Folder](command:checking-extension.selectFolder)\n[Create New Project Folder](checking-extension.createNewFolder)",
            "media": {
              "image": "./src/media/folder-active.png",
              "altText": "Open Project Folder"
            },
            "completionEvents": [
              "onFolderSelected"
            ],
            "when": "workbenchState != empty"
          },
          {
            "id": "selectGatewayLanguage",
            "title": "Select gateway Language",
            "description": "Now that we have a folder, let's choose the Gateway Language project.\n[Select gateway Language](command:codex-project-manager.nameProject)",
            "media": {
              "image": "./src/media/name-project.png",
              "altText": "Name Project"
            },
            "completionEvents": [
              "onCommand:codex-project-manager.nameProject"
            ],
          }
        ]
      }
    ]
  },
  "scripts": {
    "install:all": "pnpm run install:webview && pnpm install",
    "install:webview": "cd webview-ui && pnpm install",
    "build:all": "pnpm run build:webview && pnpm run compile",
    "start:webview": "cd webview-ui && pnpm run start",
    "build:webview": "cd webview-ui && pnpm run build",
    "build:webview-debug": "cd webview-ui && pnpm run build:dev",
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "pnpm run compile && pnpm run lint",
    "lint": "eslint src --ext ts",
    "test": "vscode-test",
    "pre-package:extension": "pnpm run install:webview && pnpm run build:webview",
    "package:extension": "npm install && vsce package"
  },
  "dependencies": {
    "@types/vscode": "^1.91.0",
    "@types/mocha": "^10.0.7",
    "@types/node": "20.x",
    "@typescript-eslint/eslint-plugin": "^7.14.1",
    "@typescript-eslint/parser": "^7.11.0",
    "@vscode/test-cli": "^0.0.9",
    "@vscode/test-electron": "^2.4.0",
    "@vscode/codicons": "^0.0.35",
    "bible-reference-range": "^1.1.1",
    "deep-equal": "1.0.1",
    "eslint": "^8.57.0",
    "eslint-config-eslint": "^11.0.0",
    "eslint-plugin-jsdoc": "^48.10.1",
    "fs-extra": "^11.2.0",
    "ospath": "^1.2.2",
    "tc-source-content-updater": "^1.4.25",
    "typescript": "^5.4.5",
    "usfm-js": "^3.4.2",
    "yamljs": "^0.3.0"
  }
}
