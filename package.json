{
  "name": "checking-extension-extension",
  "displayName": "checking-extension-extension",
  "description": "A vscode extension to open translation note tsv files and display them for a specific verse",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.75.0"
  },
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "checking-extension.initCheckerTN",
        "title": "Init Checker tN"
      },
      {
        "command": "checking-extension.initCheckerTW",
        "title": "Init Checker tW"
      }
    ],
    "customEditors": [
      {
        "viewType": "checking-extension.translationChecker",
        "displayName": "Translation Checking Tool",
        "selector": [
          {
            "filenamePattern": "*.check"
          }
        ],
        "priority": "default"
      }
    ]
  },
  "scripts": {
    "install:all": "pnpm install && cd webview-ui && pnpm install",
    "start:webview": "cd webview-ui && pnpm run start",
    "build:webview": "cd webview-ui && pnpm run build",
    "vscode:prepublish": "pnpm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "pnpm run compile && pnpm run lint",
    "lint": "eslint src --ext ts"
  },
  "devDependencies": {
    "@types/glob": "^7.1.3",
    "@types/node": "^12.11.7",
    "@types/vscode": "^1.46.0",
    "@typescript-eslint/eslint-plugin": "^7.0.1",
    "@typescript-eslint/parser": "^7.0.1",
    "eslint": "^8.56.0",
    "glob": "^7.1.6",
    "prettier": "^2.2.1",
    "typescript": "^5.3.3",
    "vscode-test": "^1.5.0"
  },
  "dependencies": {
    "@vscode/codicons": "^0.0.35",
    "bible-reference-range": "^1.1.1",
    "checking-tool-rcl": "file:.yalc/checking-tool-rcl",
    "fs-extra": "^11.2.0",
    "ospath": "^1.2.2",
    "path-extra": "^4.3.0",
    "tc-source-content-updater": "^1.4.24"
  }
}
